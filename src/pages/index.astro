---
import { Icon } from "astro-icon/components";
import MainLayout from "../layout/main-layout.astro";
import "../styles/index.css";
import Nav from "../components/Nav.astro";
import Header from '../components/Header.astro';
import { ProjectsData } from "../data/projects";
---

<MainLayout title="Tonie" description="Tonie - Software Developer">
  <Nav />
	<Header />
  <main>
    <section class="intro_section">
			<p>
				Hi! My name is Tonie Victor, I'm a software developer with a primary interest in low level software, networking, backend infrastructure and distributed sytsems.
			</p>
			<p>
				I recently started streaming my coding sessions on <a style={{"color": "rgb(119, 44, 232)"}} href="https://www.twitch.tv/tonievictor" target="_blank">Twitch</a> - stop by sometime! and I maintain a <a href="/blog">blog</a> where I share my experiences and understanding of software technologies.
			</p>
			<p>
				Outside tinkering with code, I read books, play video games, listen to music and I'm fairly adept at playing football.
			</p>
    </section>

    <section id="projects" class="projects">
      <h2 class="section__title">Projects</h2>
      <div class="project_container">
				{ProjectsData.map((project) => (
					<div class="project" >
							<a target="_blank" href={project.link} class="project_title">{project.title} <Icon name="mdi:arrow-top-right-thin" class="project_arrow"/></a>
							<p>{project.overview}</p>
							<div class="project_tags">
								{project.tags.map((tag) => <span>{tag}</span>)}
							</div>
					</div>
					))}
	  </div>

    </section>
  </main>
</MainLayout>
