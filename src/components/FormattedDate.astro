---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()} style={{
	"font-size": ".9rem",
	"font-weight": "300",
	"width": "100%",
	"opacity": "0.75"
}}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
